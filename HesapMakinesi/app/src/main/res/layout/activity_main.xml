<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hesapmakinesi.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="1.Sayi"
            android:layout_alignBaseline="@+id/et_birinciSayi"
            android:layout_alignBottom="@+id/et_birinciSayi"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="25dp"
            android:text="2.Sayi" />

        <EditText
            android:id="@+id/et_birinciSayi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_ikinciSayi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_birinciSayi"
            android:layout_alignStart="@+id/et_birinciSayi"
            android:layout_below="@+id/et_birinciSayi"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/et_ikinciSayi"
            android:layout_marginTop="62dp"
            android:text="Sonuc:" />

        <TextView
            android:id="@+id/tv_sonuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignEnd="@+id/et_ikinciSayi"
            android:layout_alignLeft="@+id/et_ikinciSayi"
            android:layout_alignRight="@+id/et_ikinciSayi"
            android:layout_alignStart="@+id/et_ikinciSayi"
            android:paddingTop="20dp" />

        <Button
            android:id="@+id/btn_topla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:paddingTop="10dp"
            android:text="Topla"
            android:layout_below="@+id/textView6"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_alignRight="@+id/tv_sonuc"
            android:layout_alignEnd="@+id/tv_sonuc" />

        <Button
            android:id="@+id/btn_cikar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btn_topla"
            android:layout_alignLeft="@+id/btn_topla"
            android:layout_alignRight="@+id/btn_topla"
            android:layout_alignStart="@+id/btn_topla"
            android:layout_below="@+id/btn_topla"
            android:text="Çıkar" />

        <Button
            android:id="@+id/btn_carp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btn_cikar"
            android:layout_alignLeft="@+id/btn_cikar"
            android:layout_alignRight="@+id/btn_cikar"
            android:layout_alignStart="@+id/btn_cikar"
            android:layout_below="@+id/btn_cikar"
            android:text="Çarp" />

        <Button
            android:id="@+id/btn_bol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btn_carp"
            android:layout_alignLeft="@+id/btn_carp"
            android:layout_alignRight="@+id/btn_carp"
            android:layout_alignStart="@+id/btn_carp"
            android:layout_below="@+id/btn_carp"
            android:text="Böl" />

        <Button
            android:id="@+id/btn_temizle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_sonuc"
            android:layout_alignStart="@+id/tv_sonuc"
            android:layout_below="@+id/btn_bol"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="16dp"
            android:text="Temizle" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
